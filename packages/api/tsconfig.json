{
  "ts-node": {
    "files": true,
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "rootDir": "./",
    "strictNullChecks": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@app/*": [
        "src/app/*"
      ]
    },
    "types": [
      "jest",
      "node"
    ],
    "esModuleInterop": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true
  }
}